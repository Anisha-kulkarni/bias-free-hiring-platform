<%- include('partials/header') %>

    <div class="container" style="padding-top: 4rem; max-width: 500px; animation: fadeIn 0.8s ease-out;">
        <div style="text-align: center; margin-bottom: 2rem;">
            <div style="
            width: 80px; 
            height: 80px; 
            background: rgba(34, 197, 94, 0.1); 
            border-radius: 50%; 
            display: flex; 
            align-items: center; 
            justify-content: center; 
            margin: 0 auto 1.5rem;
            color: #4ade80;
            border: 1px solid rgba(34, 197, 94, 0.2);
            box-shadow: 0 0 20px rgba(34, 197, 94, 0.1);
        ">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
            </div>
            <h1 style="margin-bottom: 0.5rem; font-size: 1.8rem;">Check Your Email</h1>
            <p style="color: var(--color-text-muted);">
                We've sent a verification link to<br>
                <strong style="color: white; font-size: 1.1rem;">
                    <%= email %>
                </strong>
            </p>
        </div>

        <div class="card" style="
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(10px);
        padding: 2rem;
        border-radius: var(--radius-lg);
        border: 1px solid rgba(255,255,255,0.05);
        text-align: center;
    ">
            <p style="margin-bottom: 2rem; line-height: 1.6; color: var(--color-text-muted);">
                Click the link in the email to activate your Student Portal account and access your learning dashboard.
            </p>

            <form action="/resend-verification" method="POST">
                <input type="hidden" name="email" value="<%= email %>">
                <button type="submit" class="btn" style="
                background: transparent; 
                border: 1px solid rgba(255,255,255,0.2); 
                width: 100%;
                margin-bottom: 1rem;
            ">
                    Resend Verification Email
                </button>
            </form>

            <div style="font-size: 0.85rem; color: var(--color-text-muted);">
                Didn't receive it? Check your spam folder or <a href="/login" style="color: var(--color-primary);">Sign
                    In</a> with a different email.
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>